-#  This file is app/views/movies/index.html.haml
%h2 All Movies

= form_tag movies_path, :id => "ratings_form", :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @ratings[rating]
  = submit_tag 'Refresh', data: {:action => "rating_submit"}
%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:class => @title_class}= link_to "Movie Title", movies_path(:sort => "title"), :id => "title_header"
      %th Rating
      %th{:class => @date_class}=link_to "Release Date", movies_path(:sort => "date"), :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
